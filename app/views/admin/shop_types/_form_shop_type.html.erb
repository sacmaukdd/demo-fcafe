<% unless params[:action] == Settings.action_edit %>
  <h3 class="center"><%= t "add_shop_type" %></h3>
<% end %>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for [:admin, @shop_type] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>

      <% if params[:action] == Settings.action_edit %>
        <%= f.submit (t "save"), class: "btn btn-primary add_cate" %>
      <% else %>
        <%= f.submit (t "add"), class: "btn btn-primary add_cate" %>
      <% end %>
    <% end %>
  </div>
</div>
